<nav
  id="nav"
  role="nav"
  class="z-50 w-full bottom-0 shadow-up absolute py-5 flex justify-between font-bold gap-4 md:backdrop-blur-md md:bottom-auto md:top-0 md:shadow-lg md:fixed md:max-w-[1200px] mx-auto inset-x-0">
  <div id="logo" class="">
    <a href="/" class="flex gap-2 items-center">
      <div class="logo-icon w-[179px] h-[32px] relative">
        <div class="gray">
          {% include "logo-svg-2" size: "32" %}
        </div>
        <div class="color">
          {% include "logo-svg-2" size: "32"
            , color: true %}
        </div>
      </div>
    </a>
  </div>
  <div class="flex-1 justify-end md:justify-center flex hidden">
    <button id="quick-search-button" class="flex gap-4 font-light text-sm items-center text-gray-dark md:border md:opacity-60 md:border-gray md:bg-white md:rounded-lg md:px-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="3"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="feather feather-search">
        <circle
          cx="11"
          cy="11"
          r="8"></circle>
        <line
          x1="21"
          y1="21"
          x2="16.65"
          y2="16.65"></line>
      </svg>
      <div class="hidden md:flex">
        Quick Search...
      </div>
      <div class="hidden md:flex">
        âŒ˜K
      </div>
    </button>
  </div>
  <ul class="flex-shrink justify-end gap-8 items-center flex-wrap mr-5 hidden md:flex">
    {% assign docs_link = objects.docs | first %}
    <li class="nav-text">
      <a href="/{{ docs_link.path }}.html">Docs</a>
    </li>
    {% assign cli_link = objects.cli | first %}
    <li class="nav-text">
      <a href="/{{ cli_link.path }}.html">CLI</a>
    </li>
    <li class="nav-text">
      <a href="/manifesto.html">Manifesto</a>
    </li>
    <li class="nav-text">
      <a href="https://editor.archival.dev">Editor</a>
    </li>
    <li class="nav-text nav-text-cta">
      <a href="https://editor.archival.dev/new">Create</a>
    </li>
    {% comment %} <li class="w-5">
      <a href="https://github.com/jesseditson/archival"><img src="/img/github-mark.png" alt="github" /></a>
    </li>
    <li class="w-5">
      <a href="/chat.html"><img src="/img/discord-mark.png" alt="discord" /></a>
    </li>
    <li class="w-5">
      <a href="https://docs.rs/archival/"><img src="/img/rust.png" alt="rust library documentation" /></a>
    </li> {% endcomment %}
  </ul>
  <div class="md:hidden mr-5 flex items-center">
    <button>
      <div id="menu-closed">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="3"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-menu">
          <line
            x1="3"
            y1="12"
            x2="21"
            y2="12"></line>
          <line
            x1="3"
            y1="6"
            x2="21"
            y2="6"></line>
          <line
            x1="3"
            y1="18"
            x2="21"
            y2="18"></line>
        </svg>
      </div>
      <div id="menu-open" class="hidden">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="3"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-x">
          <line
            x1="18"
            y1="6"
            x2="6"
            y2="18"></line>
          <line
            x1="6"
            y1="6"
            x2="18"
            y2="18"></line>
        </svg>
      </div>
    </button>
  </div>
</nav>
<div id="mobile-menu" class="hidden translate-y-full transition opacity-0 shadow-up bg-white absolute w-full pb-20 px-4 bottom-0 z-40 text-xl text-gray-dark rounded-lg md:hidden max-h-full overflow-y-auto">
  {% if area == "home" %}
    <ul class="flex flex-col">
      {% assign docs_link = objects.docs | first %}
      <li class="flex hover:text-teal border-b border-gray-light px-8 py-3">
        <a class="flex-1" href="/{{ docs_link.path }}.html">Documentation</a>
      </li>
      {% assign cli_link = objects.cli | first %}
      <li class="flex hover:text-teal border-b border-gray-light px-8 py-3">
        <a class="flex-1" href="/{{ cli_link.path }}.html">CLI docs</a>
      </li>
      <li class="flex hover:text-teal border-b border-gray-light px-8 py-3">
        <a class="flex-1" href="/manifesto.html">Manifesto</a>
      </li>
      <li class="flex hover:text-teal border-b border-gray-light px-8 py-3">
        <a class="flex-1" href="https://editor.archival.dev">Editor</a>
      </li>
      <li class="flex gap-10 border-b border-gray-light px-8 py-3">
        <a class="flex-1 flex items-center gap-4" href="https://github.com/jesseditson/archival"><img
            class="w-5 h-5"
            src="/img/github-mark.png"
            alt="github" /> Github</a>
      </li>
      <li class="flex gap-10 border-b border-gray-light px-8 py-3">
        <a class="flex-1 flex items-center gap-4" href="/chat.html"><img
            src="/img/discord-mark.png"
            class="w-5"
            alt="discord" /> Discord</a>
      </li>
      <li class="flex gap-10 px-8 py-3">
        <a class="flex-1 flex items-center gap-4" href="https://docs.rs/archival/"><img
            src="/img/rust.png"
            class="w-5 h-5"
            alt="rust library documentation" /> Rust Library</a>
      </li>
    </ul>
  {% elsif area == "docs" %}
    <ul class="flex flex-col">
      {% for doc in objects.docs %}
        <li class="flex hover:text-teal border-b border-gray-light px-8 py-3">
          <a class="flex-1" href="/{{ doc.path }}.html">{{ doc.title }}</a>
        </li>
      {% endfor %}
    </ul>
  {% elsif area == "cli" %}
    <ul class="flex flex-col">
      {% for doc in objects.cli %}
        <li class="flex hover:text-teal border-b border-gray-light px-8 py-3">
          <a class="flex-1" href="/{{ doc.path }}.html">{{ doc.command }}</a>
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</div>
